{
  "name": "postgres-sink-trading",
  "config": {
    "connector.class": "io.debezium.connector.jdbc.JdbcSinkConnector",
    "tasks.max": "2",

    "connection.url": "${SINK_DB_URL}&currentSchema=mp_cdc",
    "connection.username": "${SINK_DB_USER}",
    "connection.password": "${SINK_DB_PASSWORD}",

    "topics.regex": "xchange_trading\\.xchange_trading\\..*",

    "insert.mode": "upsert",
    "primary.key.mode": "record_key",
    "delete.enabled": "true",

    "schema.evolution": "basic",
    "quote.identifiers": "false",

    "consumer.override.auto.offset.reset": "earliest",
    "consumer.override.security.protocol": "${KAFKA_SECURITY_PROTOCOL}",
    "consumer.override.sasl.mechanism": "${KAFKA_SASL_MECHANISM}",
    "consumer.override.sasl.jaas.config": "org.apache.kafka.common.security.scram.ScramLoginModule required username=\"${CONFLUENT_API_KEY}\" password=\"${CONFLUENT_API_SECRET}\";",
    "consumer.override.ssl.endpoint.identification.algorithm": "https",

    "key.converter": "org.apache.kafka.connect.json.JsonConverter",
    "key.converter.schemas.enable": "true",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "true",


    "transforms": "route,castBits",
    "transforms.route.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.route.regex": "xchange_trading\\.xchange_trading\\.(.*)",
    "transforms.route.replacement": "trading_$1",

    "transforms.castBits.type": "org.apache.kafka.connect.transforms.Cast$Value",
    "transforms.castBits.spec": "damaged_unit:boolean,easy_open_door:boolean,exact_photo:boolean,instant:boolean,non_negotiable:boolean,with_forklift_pockets:boolean,with_lock_box:boolean,is_cover_image:boolean,auto_decline_disabled:boolean,cancellation_requested:boolean,critical:boolean,demand_captured:boolean,payment_handling:boolean,payment_paused:boolean,active:boolean,needs_additional_reason:boolean,vents:int16,free_storage_days:int16"
  }
}
