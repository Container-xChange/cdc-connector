{
  "name": "postgres-sink-connector",
  "config": {
    "connector.class": "io.debezium.connector.jdbc.JdbcSinkConnector",
    "tasks.max": "3",

    "connection.url": "${SINK_DB_URL}",
    "connection.username": "${SINK_DB_USER}",
    "connection.password": "${SINK_DB_PASSWORD}",

    "topics.regex": "(xchange_trading|xchange_finance|xchangelive)\\.(xchange_trading|xchange_finance|xchangelive)\\..*",

    "insert.mode": "upsert",
    "primary.key.mode": "record_key",
    "delete.enabled": "true",

    "schema.evolution": "basic",
    "quote.identifiers": "false",
    "hibernate.dialect": "org.hibernate.dialect.PostgreSQLDialect",
    "table.name.format": "${topic}",

    "transforms": "route,SchemaRouter",
    "transforms.route.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.route.regex": "([^.]+)\\.([^.]+)\\.(.*)",
    "transforms.route.replacement": "$3",
    "transforms.SchemaRouter.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.SchemaRouter.regex": ".*",
    "transforms.SchemaRouter.replacement": "$1"
  }
}
