{
  "name": "postgres-sink-xchangelive",
  "config": {
    "connector.class": "io.debezium.connector.jdbc.JdbcSinkConnector",
    "tasks.max": "3",

    "connection.url": "${SINK_DB_URL}",
    "connection.username": "${SINK_DB_USER}",
    "connection.password": "${SINK_DB_PASSWORD}",

    "topics.regex": "xchangelive\\.xchangelive\\..*",

    "insert.mode": "upsert",
    "primary.key.mode": "record_key",
    "delete.enabled": "true",

    "schema.evolution": "basic",
    "quote.identifiers": "false",
    "hibernate.dialect": "org.hibernate.dialect.PostgreSQLDialect",
    "table.name.format": "xchangelive.${topic}",

    "transforms": "route,lowercase",
    "transforms.route.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.route.regex": "xchangelive\\.xchangelive\\.(.*)",
    "transforms.route.replacement": "$1",
    "transforms.lowercase.type": "org.apache.kafka.connect.transforms.ReplaceField$Value",
    "transforms.lowercase.renames": ".*:.*"
  }
}
